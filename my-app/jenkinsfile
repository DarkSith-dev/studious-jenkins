pipeline {
  agent any
      tools{
        nodejs "node 22.11.0"
      }

      stages{
        stage('Checkout'){
          steps{
            checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs:[[url:'https://github.com/DarkSith-dev/studious-jenkins.git' ]]])
          }
        }

        stage('Build'){
          steps{
            sh 'npm install'
            sh 'npm run build'
          }
        }

        stage('Run Unit Tests'){
          steps{
            sh 'npm run test'
          }
        }


      }
}
